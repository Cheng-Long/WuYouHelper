<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:long="http://schemas.android.com/apk/res/com.clong.wuyouhelper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/TitleTheme"
        android:text="@string/home_settings" />

    <ImageButton style="@style/BackTheme" />

    <com.clong.wuyouhelper.view.SettingItemView
        android:id="@+id/siv_autoUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        long:desc="@string/setting_autoUpdate"
        long:switch_on="@drawable/switch_on_normal"
        long:switch_off="@drawable/switch_off_normal" >
    </com.clong.wuyouhelper.view.SettingItemView>

</RelativeLayout>